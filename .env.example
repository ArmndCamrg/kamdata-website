# Configuración del entorno para Kamdata Website
# Copia este archivo como .env y configura las variables según tu entorno

# Configuración de React
REACT_APP_NAME=Kamdata Website
REACT_APP_VERSION=1.0.0
REACT_APP_ENVIRONMENT=development

# URLs de la aplicación
REACT_APP_BASE_URL=http://localhost:3000
REACT_APP_API_URL=http://localhost:5001

# Configuración de Firebase (reemplazar con valores reales)
REACT_APP_FIREBASE_API_KEY=your-api-key-here
REACT_APP_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
REACT_APP_FIREBASE_PROJECT_ID=your-project-id
REACT_APP_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
REACT_APP_FIREBASE_MESSAGING_SENDER_ID=123456789
REACT_APP_FIREBASE_APP_ID=1:123456789:web:abcdef123456

# Configuración de email (para Cloud Functions)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Configuración de desarrollo
GENERATE_SOURCEMAP=true
ESLINT_NO_DEV_ERRORS=true
TSC_COMPILE_ON_ERROR=true

# Configuración de build
BUILD_PATH=build
PUBLIC_URL=/